class Solution {
public:
    vector<int> findWordsContaining(vector<string>& words, char x) {
        int n = words.size();
        vector<int> ans;
        for(int i=0;i<size(words);i++){
            for(int j=0;j<size(words[i]);j++)
            if (words[i][j] == x){
             ans.push_back(i);
             break;
            }
        }
        return ans;
    }
};
